<center> <h1> Create New Post: </h1>
<br>
<%= form_for @post do | f | %>
<%= f.label :title %>
<%= f.text_field :title %>
<br><br>
<%= f.label :content %>
<%= f.text_area :content %>
<br><br>
<%= f.label :blogger %>
<%= f.collection_select :blogger_id, @bloggers, :id, :name, prompt: true%>
<br><br>
<%= f.label :destination %>
<%= f.collection_select :destination_id, @destinations, :id, :name, prompt: true%>
<br><br>
<%= f.submit %>
<% end %>